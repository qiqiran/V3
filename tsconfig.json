{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".", // 工作根目录
    "resolveJsonModule": true, //是否允许把json文件当做模块进行解析
    "isolatedModules": true, //每个文件需要是一个模块
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "webpack-env"
    ],
    "typeRoots": [
      "./node_modules/@types/",
      "./types"
    ],
    "paths": { // 指定模块的路径，和baseUrl有关联，应用于ts文件，与vue.config.js同步
      "src/*": [
        "./src/*",
      ],
      "@/*": [
        "./src/*",
      ],
      "#/*": [
        "./src/framework/*",
      ],
      "static/*": [
        "./public/static/*",
      ],
      "config/*": [
        "./config/*",
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}